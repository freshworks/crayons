{
  "name": "crayons",
  "version": "3.0.0",
  "description": "Crayons Packages comprising of Design system library using web components, icon library and i18n library",
  "main": "index.js",
  "engines": {
    "node": ">=14.7.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream && npm run docs:build && npm run storybook:build",
    "code-sanity": "npm run lint",
    "check-version": "HUSKY_INSTALL=1 HUSKY_SKIP_HOOKS=1 lerna version --conventional-commits --no-push --no-git-tag-version",
    "clean-changelog": "lernacleanchangelog '**'",
    "docs:build": "node www/scripts/reorganize.js && vuepress build www",
    "docs:dev": "lerna run build --stream && node www/scripts/reorganize.js && vuepress dev www",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:fix": "npm run lint:ts:fix && npm run lint:styles",
    "lint:styles": "stylelint '**/*.scss' '**/.vuepress/**/*.vue'",
    "lint:ts": "eslint .",
    "lint:ts:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "release": "HUSKY_INSTALL=1 HUSKY_SKIP_HOOKS=1 lerna publish from-package --no-commit-hooks --dist-tag canary",
    "release:ci": "HUSKY_INSTALL=1 HUSKY_SKIP_HOOKS=1 lerna publish from-package --no-commit-hooks --dist-tag canary --yes",
    "storybook:build": "rimraf storybook-dist && build-storybook -c docs/.storybook -o docs/storybook-dist",
    "storybook:dev": "lerna run build --stream && start-storybook -p 9001 -c docs/.storybook",
    "storybook-dist:serve": "npm run kill:pid-8082 && cd docs/storybook-dist && http-server -s -c-1 -p 8082",
    "kill:pid-8082": "npx kill-port 8082",
    "storybook:visual-regression": "(npm run storybook-dist:serve & npm --prefix ./packages/crayons-visual-regression/ run test-all)",
    "storybook:stop-ui-test": "kill $(cat .ui-test-pid) || true",
    "visual-regressions:count": "npm --prefix ./packages/crayons-visual-regression/ run checkIfVisualRegressionExists",
    "visual-regressions:update-snapshots": "npm --prefix ./packages/crayons-visual-regression/ run update-snapshots:spec",
    "test": "npm run storybook:build && (npm run storybook-dist:serve & ( sleep 5 && lerna run test --stream ))",
    "update-lock": "sh ./release.sh",
    "update-version": "HUSKY_INSTALL=1 HUSKY_SKIP_HOOKS=1 lerna version --conventional-commits --no-push && npm run clean-changelog && npm run update-lock",
    "update-version:ci": "HUSKY_INSTALL=1 HUSKY_SKIP_HOOKS=1 lerna version --conventional-commits --no-push --yes && npm run clean-changelog && npm run update-lock"
  },
  "keywords": [
    "crayons",
    "webcomponents",
    "stencil",
    "stenciljs",
    "design system",
    "ui-kit",
    "freshworks",
    "typescript",
    "i18n",
    "icons"
  ],
  "author": "Freshworks Inc",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-events": "^6.2.9",
    "@storybook/addon-viewport": "^6.4.19",
    "@storybook/html": "^6.4.19",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/web-components": "^6.4.19",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vue/babel-preset-app": "^4.5.15",
    "@vuepress/plugin-active-header-links": "^1.8.2",
    "commitizen": "^4.2.4",
    "copy": "^0.3.2",
    "copy-webpack-plugin": "^6.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.18.0",
    "html-to-react": "^1.4.5",
    "husky": "^4.2.3",
    "jest-github-reporter": "^1.0.2",
    "kill-port": "^1.6.1",
    "lerna-clean-changelogs-cli": "^2.0.2",
    "lint-staged": "^10.5.4",
    "lit": "^2.2.1",
    "lit-html": "^1.3.0",
    "prepend-file": "^2.0.0",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.21.0",
    "vuepress": "^1.8.2",
    "vuepress-plugin-google-tag-manager": "0.0.5",
    "vuepress-plugin-live": "^1.6.2",
    "vuepress-plugin-seo": "^0.1.4",
    "wait-on": "^6.0.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "lerna": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint-staged && npm run visual-regressions:count"
    }
  },
  "lint-staged": {
    "**/*.{css,scss}": [
      "stylelint"
    ],
    "**/.vuepress/**/*.vue": [
      "stylelint"
    ],
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix"
    ]
  }
}
