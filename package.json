{
  "name": "@freshworks/crayons",
  "engines": {
    "node": "10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freshdesk/crayons.git"
  },
  "keywords": [
    "web-components",
    "stenciljs",
    "ui-kit",
    "typescript",
    "components"
  ],
  "author": "Freshworks Inc",
  "version": "2.3.0",
  "description": "Crayons for Developer Platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/crayons/crayons.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build:components": "stencil build --docs",
    "build": "npm run build:components && npm run storybook:build && npm run docs:build",
    "code-sanity": "npm run lint",
    "commit": "git-cz",
    "dev": "npm-run-all --parallel start storybook",
    "docs:build": "vuepress build src",
    "docs:dev": "npm run build:components && vuepress dev src",
    "generate": "plop",
    "lint:styles": "stylelint 'src/**/*.scss' 'src/.vuepress/**/*.vue'",
    "lint:ts": "tslint -c tslint.json -p tsconfig.json -t grouped -s node_modules/custom-tslint-formatters/formatters",
    "lint": "npm run lint:ts && npm run lint:styles",
    "local": "stencil build --serve --dev --watch",
    "semantic-release": "semantic-release",
    "start": "stencil build --docs --dev --watch",
    "storybook:build": "build-storybook -c .storybook -o storybook-dist",
    "storybook:test": "npm run test:generate && npm run storybook",
    "storybook": "start-storybook -p 9001 -c .storybook -s www",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test": "stencil test --spec --e2e"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@stencil/core": "1.9.2",
    "@stencil/postcss": "^1.0.1",
    "@stencil/sass": "^1.0.1",
    "@storybook/addon-a11y": "^5.3.14",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-events": "^5.3.14",
    "@storybook/addon-jest": "^5.3.14",
    "@storybook/addon-storysource": "^5.3.14",
    "@storybook/addon-viewport": "^5.3.14",
    "@storybook/html": "^5.3.14",
    "@storybook/preset-typescript": "^2.1.0",
    "@storybook/web-components": "^5.3.14",
    "@types/autoprefixer": "^9.6.1",
    "@types/jest": "^24.0.23",
    "@types/node": "12.12.22",
    "@types/puppeteer": "^1.19.1",
    "@vue/babel-preset-app": "^4.1.0",
    "@vuepress/plugin-active-header-links": "^1.2.0",
    "@vuepress/plugin-google-analytics": "^1.5.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "copy-webpack-plugin": "^5.0.1",
    "custom-tslint-formatters": "^2.4.0",
    "cz-conventional-changelog": "3.1.0",
    "html-to-react": "^1.4.2",
    "husky": "^4.2.3",
    "jest": "^24.8.0",
    "jest-cli": "24.9.0",
    "lint-staged": "^10.1.2",
    "lit-html": "^1.1.2",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "plop": "^2.4.0",
    "puppeteer": "2.1.0",
    "react": "^16.12.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-dom": "^16.12.0",
    "react-is": "^16.12.0",
    "sass-loader": "^8.0.0",
    "semantic-release": "^17.0.4",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.0",
    "tslint-ionic-rules": "^0.0.21",
    "typescript": "^3.6.4",
    "vuepress": "^1.2.0",
    "vuepress-plugin-live": "^1.4.2",
    "vuepress-plugin-seo": "^0.1.3",
    "web-component-analyzer": "^1.0.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "license": "MIT",
  "dependencies": {
    "moment-mini": "^2.24.0",
    "stencil": "^0.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "**/*.{css,scss,vue}": "stylelint --fix",
    "**/*.ts": "tslint -c tslint.json --fix",
    "**/*.tsx": "tslint -c tslint.json --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/freshdesk/crayons/issues"
  },
  "homepage": "https://github.com/freshdesk/crayons#readme"
}
